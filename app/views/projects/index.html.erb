
<div class="container">
  <div class="petit">
    <% @projects.each do |project| %>

    <div class="projects-grid">
      <div class="projects-date">
        <h2><%= project.date%></h2>
      </div>
      <div class="projects-image">
        <div class="projects-image-text">
          <i class="fas fa-search"></i><h6>Click to zoom</h6>
        </div>
      </div>
      <div class="projects-description">
        <h4><%= project.name %></h4>
        <p><%= project.description %></p>
      </div>
    </div>
    <%end%>
  </div>
</div>